@model IEnumerable<PhongVu.Domain.Entities.Banner>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Category List</h4>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered verticle-middle table-responsive-sm">
                    <thead>
                        <tr>
                            <th scope="col">Banner Id</th>
                            <th scope="col">Banner Name</th>
                            <th scope="col">Image</th>
                            <th scope="col">Banner Type</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.BannerId</td>
                                <td>@item.BannerName</td>
                                <td>
                                    <img src="/banners/@item.ImageUrl" width="100" />
                                </td>
                                <td>@item.BannerTypeName</td>
                                <td>
                                    <span>
                                        <a href="/dashboard/banner/edit/@item.BannerId" class="mr-4" data-toggle="tooltip"
                                       data-placement="top" title="Edit">
                                            <i class="fa fa-pencil color-muted"></i>
                                        </a>
                                        <a href="/dashboard/banner/delete/@item.BannerId" data-toggle="tooltip"
                                       data-placement="top" title="Close">
                                            <i class="fa fa-close color-danger"></i>
                                        </a>
                                    </span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>